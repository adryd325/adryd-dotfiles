# shellcheck shell=bash disable=SC2034,2154
pkgname=otf-inter-local
pkgver=$(curl -sS https://api.github.com/repos/rsms/inter/releases/latest | jq -r .tag_name)
pkgrel=1
pkgdesc="Inter Font"
arch=(any)
makedepends=(aria2 unzip curl jq)
conflicts=(ttf-recursive otf-recursive)

package() {
    rm -rf Inter\ Desktop
    url=$(url -sS https://api.github.com/repos/rsms/inter/releases/latest | jq -r .assets[0].browser_download_url)
    aria2c "${url}" --continue -o Inter.zip 
    unzip Inter.zip Inter\ Desktop/*.otf
    mkdir -p "${pkgdir}"/usr/share/fonts/OTF/Inter
    cp -r Inter\ Desktop/* "${pkgdir}"/usr/share/fonts/OTF/Inter
}