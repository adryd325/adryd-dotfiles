[Trigger]
Operation = Install
Operation = Upgrade
Operation = Remove
Type = Package
Target = *

[Action]
Description = Cleaning pacman cache...
Depends = pacman-contrib
Depends = sh
When = PostTransaction
Exec = /bin/sh -c 'paccache -r &>/dev/null; paccache -rvuk0 --min-atime "20 days ago" &>/dev/null'