[Trigger]
Operation = Install
Operation = Upgrade
Operation = Remove
Type = Path
Target = usr/lib/modules/*/vmlinuz

[Action]
Description = Backing up kernel modules...
Depends = pacman
Depends = sh
Depends = coreutils
When = PreTransaction
Exec = /bin/sh -c 'if [[ -d "/usr/lib/modules/$(uname -r)" ]]; then cp -r "/usr/lib/modules/$(uname -r)" "/tmp/backup-modules-$(uname -r)"; fi'
