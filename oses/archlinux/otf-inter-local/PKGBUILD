# shellcheck shell=bash disable=SC2034,2154
pkgname=otf-inter-local
pkgver=3.19
pkgrel=1
pkgdesc="Inter Font"
arch=(any)
makedepends=(aria2 unzip curl jq)
conflicts=(ttf-recursive otf-recursive)
source=("https://github.com/rsms/inter/releases/download/v${pkgver}/Inter-${pkgver}.zip")
sha256sums=('150ab6230d1762a57bebf35dfc04d606ff91598a31d785f7f100356ecdcc0032')
noextract=("Inter-${pkgver}.zip")

package() {
    rm -rf Inter\ Desktop
    unzip "Inter-${pkgver}.zip" Inter\ Desktop/*.otf
    mkdir -p "${pkgdir}"/usr/share/fonts/OTF/Inter
    cp -r Inter\ Desktop/* "${pkgdir}"/usr/share/fonts/OTF/Inter
}
